# Spin specific config
if [ $SPIN ]; then
  source /etc/zsh/zshrc.default.inc.zsh
fi

# Setup zplug
[[ -x /usr/local/bin/brew ]] && export ZPLUG_HOME=$(brew --prefix)/opt/zplug  # MacOS
[[ -x /usr/local/bin/brew ]] || export ZPLUG_HOME=/usr/local/opt/zplug  # Spin
source $ZPLUG_HOME/init.zsh

zplug "rupa/z", use:"z.sh", from:github
zplug "mafredri/zsh-async", from:github
zplug "sindresorhus/pure", use:pure.zsh, from:github, as:theme
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-syntax-highlighting", defer:2

zplug install
zplug load

# Lots of history
export HISTSIZE=1000000000
export SAVEHIST="${HISTSIZE}"

# Editor
export EDITOR=code

# Aliases
alias g=git
alias gp="git pull"
alias gs="git status"
alias ga="git add"
alias gc="git commit --verbose"
alias gca="git commit --verbose --all"
alias gr="git rebase"
alias gri="git rebase"
alias gd="git diff"
alias gb="git branch --sort=-committerdate"
alias gco="git checkout"
alias gcd="git checkout-default"
alias gc!="gc --amend"
alias gca!="gca --amend"
alias ll="ls -l"

# Dev
[ -f /opt/dev/dev.sh ] && source /opt/dev/dev.sh
[[ -f /opt/dev/sh/chruby/chruby.sh ]] && type chruby >/dev/null 2>&1 || chruby () { source /opt/dev/sh/chruby/chruby.sh; chruby "$@"; }
[[ -x /usr/local/bin/brew ]] && eval $(/usr/local/bin/brew shellenv)

